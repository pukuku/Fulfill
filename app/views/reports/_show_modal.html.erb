<div class="report_modal">
  <h3>詳細</h3>
  <div class="report_modal_contents">
    <div class="row mt-5">
      <div class="col-5 mx-auto d-flex">
        <div class="complete_body">コメント：</div>
        <pre><%= @report.comment %></pre>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-3 mx-auto">
        <div class="complete_body">満足度：<%= @report.fulness %></div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-3 mx-auto">
        <div class="complete_body">達成度：<%= @report.task_progress %>/<%= @report.task_all %></div>
      </div>
    </div>
  </div>
</div>

<!--マスク-->
<div class="report_mask"></div>
