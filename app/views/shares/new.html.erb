<!--サブエリア-->
<div class="sub_area">
  <%= render 'users/show', user: @user, clips: @clips %>
</div>

<!--メインエリア-->
<div class="main_area">
  <!--ページヘッド部-->
  <div class="row mt-5">
    <div class="col-12">
      <%= link_to "", goals_path, class:"fas fa-arrow-circle-left" %>
      <h4>この目標をシェアする</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-5 mr-5">
      <h5><%= @goal.content %></h5>
      <%= form_with model: @share,url: goal_shares_path(@goal.id), local: true do |f| %>
        <%= render "layouts/errors", obj: @share %>
        <div class="col-12 mt-4">
          <%= f.label :カテゴリ %>
          <%= f.collection_select :category_id, Category.all, :id, :name %>
        </div>
        <div class="col-12 mt-2">
          <%= f.label :MEMO %>
          <%= f.text_area :content, class:"area_form" %>
        </div>
        <div class="col-1 ml-5 mt-2">
          <%= f.submit 'この目標をシェア', class:"btn-flat-success ml-4"%>
        </div>
      <% end %>
    </div>

    <!--週ごとタスク一覧-->
    <%= render 'layouts/tasks_week', tasks_week: @tasks_week %>

  </div>
</div>
