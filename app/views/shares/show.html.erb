<div class="user_info">
  <%= render 'users/show', user: @user, clips: @clips %>
</div>
<div class="main_area">
  <div class="row mt-4">
    <div class="col-12 mr-5">
      <%= link_to "", shares_path, class:"fas fa-arrow-circle-left" %>
      <div class="col-12 d-flex align-items-center">
      <h4 class="mr-2"><%= @share.goal.content %></h4>
          <% if @share.user_id == current_user.id %>
            <%= link_to "", edit_share_path(@share.id),class:"fas fa-edit" %>
            <%= link_to "", share_path(@share.id),class:"fas fa-trash-alt ml-2",method: :delete %>
          <% else %>
            <%= render 'clips/clip', share: @share %>
            <%= link_to "", copy_goal_path(@share.goal_id), class:"fas fa-copy ml-2",method: :post %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-5 mr-5">
      <div class="share_memo-area ml-3">
        <div class="share_memo text-center">
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
          <div class='share_memo-hole'></div>
        </div>
        <p class="share_memo-category"><%= @share.category.name %></p>
        <pre class="share_memo-body"><%= @share.content %></pre>
      </div>
    </div>
    <div class="col-1 week_area ml-5">
      <!--曜日の配列取得-->
      <% week_name=["sun","mon","tue","wed","thu","fri","sat"] %>
      <ul class="week_tab">
        <% week_name.each do |name|  %>
          <li><a href="#<%= name %>" class="<%= name %>"><%= name %></a></li>
        <% end %>
      </ul>

      <% 7.times do |i| %>
        <div id="<%= week_name[i] %>" class="area">
          <%= render 'goals/tasks_week', tasks: @tasks_week[i], week_name: week_name[i] %>
        </div>
      <% end %>

    </div>
  </div>
</div>
