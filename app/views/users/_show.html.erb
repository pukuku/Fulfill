  <div class="row mr-5">
    <div class="col-12">
      <div class="text-center mt-2">
        <%= attachment_image_tag user, :user_image, :fill, 60, 60, format:"jpeg", fallback:"no_image.jpeg",size:"60x50" %>
      </div>
      <div class="text-center mt-2">
        <%= user.name %>
        <%= link_to "", edit_user_registration_path,class:"fas fa-cogs" %>
      </div>

      <div class="mt-4 clip_box">
      <h5 class="clip mt-3">クリップした目標</h5>
      <ul class=" clip_area">
        <% clips.each do |clip| %>
          <li class="clip_item"><%= link_to clip.share.goal.content, share_path(clip.share_id), class:"link" %></li>
        <% end %>
      </ul>
      </div>
    </div>
  </div>

