<div class="container">
  <div class="row">
    <div class="col-xs-6 mx-auto message_underline"><h4>最初の目標を決めましょう</h4></div>
  </div>


<%= form_with model: @goal,url: init_create_goals_path, local: true do |f| %>
  <%= render "layouts/errors", obj: @goal %>



    <div class="row mt-5">
      <div class="col-6 mx-auto col-lg-5 form-field">
        <%= f.text_field :content, size:"60" %>
      </div>
    </div>



    <div class="row mt-5 mb-5">
      <div class="col-4"></div>
      <div class="col-2"><%= link_to "スキップ", goals_path, class:"btn-flat-primary" %></div>
      <div class="col-2  offset-1"><%= f.submit "決定", class:"btn-flat-success" %></div>
    </div>



<% end %>

</div>