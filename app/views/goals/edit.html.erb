<!--サブエリア-->
<div class="sub_area">
  <%= render 'users/show', user: @user, clips: @clips %>
</div>

<!--メインエリア-->
<div class="main_area">
  <!--ページヘッド部-->
  <div class="row mt-3">
    <div class="col-1 ml-1">
      <%= link_to "", goal_path(@goal.id), class:"fas fa-arrow-circle-left" %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 ml-4">
      <h4>目標</h4>
    </div>
    <div class="col-6 ml-5">
      <%= form_with model: @goal,url: goal_path(@goal),class:"goal_form form-group", remote: true do |f| %>
        <%= f.text_field :content,class:"form-control" %>
      <% end %>
    </div>
  </div>

  <div class="row mt-3 d-flex">
    <!--設定したタスク一覧-->
    <%= render 'goals/edit_tasks', tasks: @tasks %>
    <div class="col-1 ml-3 d-flex mt-5">
      <div class="triple_arrow"></div>
      <div class="triple_arrow"></div>
      <div class="triple_arrow"></div>
    </div>
    <!--週ごとタスク一覧-->
    <%= render 'layouts/tasks_week', tasks_week: @tasks_week %>
  </div>
</div>

<div class="modal_display_window"></div>
